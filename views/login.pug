extends layout

block content
  h1=title
  
  form(method='POST' action='')
    div.form-group
      label(for='username') Username:
      input#username.form-control(type='text' name='username' required='true' value=(undefined===users ? '' : user.username))  
    div.form-group
      label(for='password') Password:
      input#code.form-control(type='password')

    button.btn.btn-primary(type='submit') Log in

  if errors 
    ul
      for error in errors
        li!= error.msg