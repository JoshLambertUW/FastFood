mixin couponList(coupon_list, prefs, sortByPref)

  form(method='POST' action='' align='right')
    label(for='sortBy') Sort by:
    select#sortBy.form-control(type='select' name='sortBy')     
      for var val in prefs
        if sortByPref
          option(value=val selected=sortByPref) #{prefs[val]}
        else
          option(value=val) #{prefs[val]}
    button.btn.btn-primary(type='submit') Change
      
    each val in coupon_list
        p #[strong Restaurant:] #{val.restaurant.name}
        p #[strong Description:] #{val.description}
        p #[strong Date Added:] #{val.date_added_formatted}
        p #[strong Expiration Date:] #{val.date_expired_formatted}
        p #[strong Status:] #{val.status}
        a(href=val.url) #[strong Details]
        p
        hr
    else
        p There are no coupons at this time.