extends layout

block content
  h1= title

  form(method='POST' action='')
    div.form-group
      label(for='name') Name:
      input#name.form-control(type='text', placeholder='Restaurant name' name='name' required='true' value=(undefined===restaurant ? '' : restaurant.name))
    div.form-group
      label(for='site') Site:
      input#site.form-control(type='text', placeholder='Restaurant website' site='site' value=(undefined===restaurant ? '' : restaurant.site))
    div.form-group
      label(for='mobile') Does this restaurant have a mobile app?&nbsp;  
      input.checkbox-input(type='checkbox', name='mobile' value='false' )
    
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg